{
	"info": {
		"_postman_id": "lms-api-collection-v1",
		"name": "LMS API - Student Registration",
		"description": "Complete API collection for Digital Learning Management System (LMS) - Student Registration Flow",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "1. Register Student",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"user_id\", jsonData.data.user.id);",
									"    pm.environment.set(\"user_email\", jsonData.data.user.email);",
									"    pm.environment.set(\"user_phone\", jsonData.data.user.phone);",
									"    console.log(\"User registered:\", jsonData.data.user);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Ahmed Mohammed\",\n  \"email\": \"ahmed@example.com\",\n  \"phone\": \"+966501234567\",\n  \"national_id\": \"1234567890\",\n  \"password\": \"SecurePass123\",\n  \"password_confirmation\": \"SecurePass123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						},
						"description": "Register a new student account. User status will be 'pending' until verification is complete."
					},
					"response": []
				},
				{
					"name": "2. Send OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    console.log(\"OTP sent successfully!\");",
									"    console.log(\"Check storage/logs/laravel.log for OTP code\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone\": \"{{user_phone}}\",\n  \"type\": \"registration\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/send-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"send-otp"
							]
						},
						"description": "Send 6-digit OTP to user's phone. Valid for 5 minutes. Check logs: storage/logs/laravel.log"
					},
					"response": []
				},
				{
					"name": "3. Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    console.log(\"Phone verified successfully!\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone\": \"{{user_phone}}\",\n  \"otp\": \"123456\",\n  \"type\": \"registration\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"verify-otp"
							]
						},
						"description": "Verify OTP code. Replace '123456' with actual OTP from logs. Max 3 attempts."
					},
					"response": []
				},
				{
					"name": "4. Initiate Nafath",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"transaction_id\", jsonData.data.transaction.transaction_id);",
									"    console.log(\"Nafath initiated. Transaction ID:\", jsonData.data.transaction.transaction_id);",
									"    console.log(\"Poll the status 3-4 times for approval\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"national_id\": \"1234567890\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/nafath/initiate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"nafath",
								"initiate"
							]
						},
						"description": "Initiate Nafath identity verification. Returns transaction_id for polling."
					},
					"response": []
				},
				{
					"name": "5. Poll Nafath Status",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    console.log(\"Status:\", jsonData.data.transaction.status);",
									"    if (jsonData.data.transaction.status === 'approved') {",
									"        console.log(\"✅ Nafath verified! You can now login.\");",
									"    } else if (jsonData.data.transaction.status === 'pending') {",
									"        console.log(\"⏳ Still pending. Poll again in 3-5 seconds.\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/nafath/poll/{{transaction_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"nafath",
								"poll",
								"{{transaction_id}}"
							]
						},
						"description": "Poll Nafath transaction status. Auto-approves after 3 polls (testing). Poll every 3-5 seconds."
					},
					"response": []
				},
				{
					"name": "6. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.data.token);",
									"    console.log(\"✅ Login successful!\");",
									"    console.log(\"Token saved to environment:\", jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"SecurePass123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login and receive authentication token. Token valid for 30 days."
					},
					"response": []
				},
				{
					"name": "7. Logout",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    pm.environment.unset(\"token\");",
									"    console.log(\"✅ Logged out successfully\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"logout"
							]
						},
						"description": "Logout and revoke current token. Requires authentication."
					},
					"response": []
				}
			]
		},
		{
			"name": "Password Reset",
			"item": [
				{
					"name": "1. Forgot Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    console.log(\"OTP sent to registered phone\");",
									"    console.log(\"Check storage/logs/laravel.log for OTP code\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"ahmed@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/forgot-password",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"forgot-password"
							]
						},
						"description": "Request password reset OTP. OTP sent to user's registered phone number."
					},
					"response": []
				},
				{
					"name": "2. Reset Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    console.log(\"✅ Password reset successfully\");",
									"    console.log(\"All tokens revoked. Login with new password.\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone\": \"+966501234567\",\n  \"otp\": \"789012\",\n  \"password\": \"NewPassword123\",\n  \"password_confirmation\": \"NewPassword123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/reset-password",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"reset-password"
							]
						},
						"description": "Reset password with OTP. Replace OTP with actual code from logs. All tokens will be revoked."
					},
					"response": []
				}
			]
		},
		{
			"name": "Profile (Protected)",
			"item": [
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Authentication token from login"
							}
						],
						"url": {
							"raw": "{{base_url}}/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"profile"
							]
						},
						"description": "Get authenticated user profile. Requires valid token."
					},
					"response": []
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000/api/v1",
			"type": "string"
		}
	]
}
